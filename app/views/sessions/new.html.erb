<div style="max-width: 400px; margin: 4rem auto;">
  <div class="card">
    <div class="page-header" style="margin-bottom: 2rem; flex-direction: column; align-items: flex-start;">
      <h1>Login</h1>
      <p style="color: var(--gray); margin-top: 0.5rem;">Sign in to your Ad Versity account</p>
    </div>

    <% if alert %>
      <div class="alert alert-error"><%= alert %></div>
    <% end %>

    <%= form_with url: login_path, local: true do |form| %>
      <div class="form-group">
        <%= form.label :email %>
        <%= form.email_field :email, required: true, autofocus: true, placeholder: "your@email.com" %>
      </div>

      <div class="form-group">
        <%= form.label :password %>
        <%= form.password_field :password, required: true, placeholder: "Enter your password" %>
      </div>

      <div class="form-actions" style="flex-direction: column; gap: 1rem;">
        <%= form.submit "Login", class: "btn btn-primary", style: "width: 100%;" %>
        <div style="text-align: center; padding-top: 1rem; border-top: 1px solid var(--gray-light);">
          <p style="color: var(--gray); margin: 0;">
            Don't have an account? <%= link_to "Sign up", signup_path, style: "color: var(--primary); font-weight: 500; text-decoration: none;" %>
          </p>
        </div>
      </div>
    <% end %>
  </div>
</div>
